<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_shape"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginRight="@dimen/ten_dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sixteen_dp"
            android:textColor="@color/black_for_myagkiy_glavniy"
            android:text="Payment detials" />
        <ImageView
            android:id="@+id/ivInfoDebtBorrowCancel"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ten_dp"
            android:src="@drawable/cancel_sign"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:layout_marginBottom="@dimen/sixteen_dp"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#eaeaea"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8f8f8"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/for_period"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/fourteen_dp"
                    android:textColor="@color/black_for_myagkiy_glavniy"
                    android:text="For period:"/>
                <TextView
                    android:id="@+id/periodDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fourteen_dp"
                    android:textColor="@color/black_for_glavniy_text"
                    android:text="25 NOV, 2016"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginBottom="@dimen/five_dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvResidue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fourteen_dp"
                    android:layout_weight="1"
                    android:textColor="@color/black_for_myagkiy_glavniy"
                    android:text="Should payment:"/>
                <TextView
                    android:id="@+id/shouldPayPeriod"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/fourteen_dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/credit_yellow"
                    android:text="800,00$"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#eaeaea"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/dateMainLay"
            android:layout_width="match_parent"
            android:paddingRight="@dimen/ten_dp"
            android:paddingTop="@dimen/two_dp"
            android:layout_marginRight="@dimen/fourty_dp"
            android:paddingBottom="@dimen/two_dp"
            android:paddingLeft="@dimen/two_dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:gravity="end"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/etInfoDebtBorrowDate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="15 Октябрь, 2016"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:paddingTop="@dimen/five_dp"
                android:paddingBottom="@dimen/five_dp"
                android:paddingLeft="@dimen/ten_dp"
                android:textSize="@dimen/fourteen_dp"
                android:textColor="@color/black_for_myagkiy_glavniy"
                />

            <FrameLayout
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/four_dp"
                android:layout_marginBottom="@dimen/four_dp"
                android:background="#e1e1e1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/finance_calendar"
                android:tint="#e1e1e1"
                android:layout_marginLeft="@dimen/ten_dp"
                android:paddingTop="@dimen/three_dp"
                android:paddingBottom="@dimen/three_dp"
                />

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerInParent="true"

            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:layout_marginTop="@dimen/twenty_dp"
            android:gravity="end"
            android:paddingRight="@dimen/ten_dp"
            android:paddingTop="@dimen/two_dp"
            android:paddingBottom="@dimen/two_dp"
            android:paddingLeft="@dimen/two_dp"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/twenty_dp"
            android:layout_marginLeft="@dimen/twenty_dp"
            >
            <EditText
                android:id="@+id/etInfoDebtBorrowPaySumm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Ammount"
                android:textColorHint="@color/black_for_maykiy_secodary"
                android:paddingTop="@dimen/five_dp"
                android:paddingBottom="@dimen/five_dp"
                android:textSize="@dimen/fourteen_dp"
                android:paddingLeft="@dimen/ten_dp"
                android:background="#00ffffff"
                android:textColor="@color/black_for_myagkiy_glavniy"
                android:inputType="numberDecimal"
                />
            <requestFocus />

            <TextView
                android:id="@+id/abbrrAmount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="@dimen/twenty_dp"
                android:text="$"
                android:textColor="@color/black_for_myagkiy_glavniy"
                    />

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/is_calc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
        <LinearLayout
            android:id="@+id/accountSpin"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:gravity="end"
            android:paddingRight="@dimen/sevent_dp"
            android:paddingTop="@dimen/five_dp"
            android:paddingBottom="@dimen/five_dp"
            android:paddingLeft="@dimen/two_dp"
            android:layout_marginBottom="@dimen/ten_dp"

            android:orientation="horizontal"
            android:layout_marginRight="@dimen/twenty_dp"
            android:layout_marginLeft="@dimen/twenty_dp"
            >

            <Spinner
                android:id="@+id/spInfoDebtBorrowAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"

                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerInParent="true"

            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:gravity="end"
            android:paddingRight="@dimen/ten_dp"
            android:paddingTop="@dimen/two_dp"
            android:paddingBottom="@dimen/two_dp"
            android:paddingLeft="@dimen/two_dp"
            android:layout_marginTop="@dimen/twenty_dp"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/twenty_dp"
            android:layout_marginLeft="@dimen/twenty_dp"
            >
            <EditText
                android:id="@+id/etInfoDebtBorrowPayComment"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Some comment"
                android:textColorHint="@color/black_for_maykiy_secodary"
                android:paddingTop="@dimen/five_dp"
                android:paddingBottom="@dimen/five_dp"
                android:textSize="@dimen/fourteen_dp"
                android:paddingLeft="@dimen/ten_dp"
                android:background="#fff"
                android:textColor="@color/black_for_myagkiy_glavniy"
                />



        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/checkInclude"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/ten_dp"
        android:paddingBottom="@dimen/ten_dp"
        android:layout_marginTop="@dimen/five_dp"
        android:layout_marginBottom="@dimen/five_dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/include_credit_in_balance"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/twentyfive_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:textColor="@color/black_for_glavniy_text"
            android:textSize="@dimen/fourteen_dp"
            android:layout_toLeftOf="@+id/key_for_balance"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/twenty_dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/key_for_balance" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        android:layout_marginBottom="@dimen/twenty_dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/diaolog_buttons"
            android:scaleType="fitXY"
            android:tint="?attr/headAccedent"
            android:layout_alignRight="@+id/ivInfoDebtBorrowSave"
            android:layout_alignTop="@+id/ivInfoDebtBorrowSave"
            android:layout_alignBottom="@+id/ivInfoDebtBorrowSave"
            android:layout_alignLeft="@+id/ivInfoDebtBorrowSave"
            />
        <TextView
            android:id="@+id/ivInfoDebtBorrowSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paymet_p"
            android:paddingLeft="@dimen/fourty_dp"
            android:paddingRight="@dimen/fourty_dp"
            android:paddingTop="@dimen/five_dp"
            android:paddingBottom="@dimen/five_dp"
            android:textSize="@dimen/sixteen_dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>


</LinearLayout>