<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey_light2"
        android:descendantFocusability="blocksDescendants">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff">
            <ImageView
                android:id="@+id/ivAccountListIcon"
                android:layout_width="@dimen/fourty_dp"
                android:layout_height="@dimen/fourty_dp"
                android:layout_marginBottom="@dimen/fifteen_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginTop="@dimen/fifteen_dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvAccountListName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:layout_marginRight="@dimen/sixteen_sp"
                    android:layout_marginTop="@dimen/fifteen_dp"
                    android:text="TextView"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="@dimen/sixteen_sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAccStartMoney"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:textSize="@dimen/twelve_dp"
                    android:text="TextView"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/green_light_forline"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="TextView"
            android:layout_margin="@dimen/ten_dp"
            android:id="@+id/tvContent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginBottom="@dimen/ten_dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/to_earn"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:background="@drawable/knopka_zeleniy"
                android:textColor="@color/green_light"
                android:textSize="@dimen/twelve_dp"
                android:id="@+id/tvAccountToEarn"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/replanish"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@drawable/knopka_zeleniy"
                android:textColor="@color/green_light"
                android:textSize="@dimen/twelve_dp"
                android:id="@+id/tvAccountPay"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


