<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:layout_marginLeft="@dimen/eight_dp"
        android:layout_marginRight="@dimen/eight_dp"
        android:layout_marginBottom="@dimen/sevent_dp"
        android:layout_marginTop="@dimen/two_dp"
        card:cardMaxElevation="@dimen/ten_dp"
        card:cardElevation="@dimen/five_dp"
        card:cardCornerRadius="@dimen/eight_dp"
        android:layout_gravity="center_horizontal">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivAccountListIcon"
                    android:layout_width="@dimen/fourty_dp"
                    android:layout_height="@dimen/fourty_dp"
                    android:layout_marginBottom="@dimen/fifteen_dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/fifteen_dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvAccountListName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/five_dp"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_marginRight="@dimen/sixteen_sp"
                        android:layout_marginTop="@dimen/fifteen_dp"
                        android:text="TextView"
                        android:textColor="@color/toolbar_text_color"
                        android:textSize="@dimen/sixteen_sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvAccStartMoney"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:layout_marginBottom="@dimen/five_dp"
                        android:textSize="@dimen/twelve_dp"
                        android:text="TextView"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvAccLimit"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:textSize="@dimen/twelve_dp"
                        android:layout_marginBottom="@dimen/five_dp"
                        android:text="TextView"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvAccLimitDate"
                        android:layout_marginLeft="@dimen/fifteen_dp"
                        android:textSize="@dimen/twelve_dp"
                        android:layout_marginBottom="@dimen/ten_dp"
                        android:text="TextView"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_dp"
                android:background="@color/toolbar_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/llAccountLimit">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:id="@+id/rlProgressBar"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/sixteen_dp"
                        android:layout_marginLeft="@dimen/sixteen_dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:layout_marginBottom="@dimen/ten_dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvAccountLimitPerDay"
                            android:textSize="@dimen/ten_dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvAccountRemain"
                            android:textSize="@dimen/ten_dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvAccLimitTimeInterval"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:layout_marginRight="@dimen/five_dp"
                        android:background="@drawable/knopka_zeleniy"
                        android:textColor="@color/green_light"
                        android:textSize="@dimen/twelve_dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="TextView"
                    android:layout_margin="@dimen/ten_dp"
                    android:id="@+id/tvContent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginBottom="@dimen/ten_dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/to_earn"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:layout_marginRight="@dimen/five_dp"
                    android:background="@drawable/knopka_zeleniy"
                    android:textColor="@color/green_light"
                    android:textSize="@dimen/twelve_dp"
                    android:id="@+id/tvAccountToEarn"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/replanish"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:layout_marginRight="@dimen/five_dp"
                    android:background="@drawable/knopka_zeleniy"
                    android:textColor="@color/green_light"
                    android:textSize="@dimen/twelve_dp"
                    android:id="@+id/tvAccountPay"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>


