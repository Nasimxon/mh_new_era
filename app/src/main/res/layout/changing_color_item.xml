<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/eighty_dp"
    android:layout_height="@dimen/eighty_dp"
    android:id="@+id/llChangingColorItem"
    android:background="@drawable/color_choose_item_bg"
    android:layout_margin="@dimen/one_dp">
    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/llColorChooserBackground"
            android:orientation="horizontal"/>
        <ImageView
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:src="@drawable/lock"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:id="@+id/ivColorChooserLock"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/glass_mask"/>
    </RelativeLayout>
</RelativeLayout>