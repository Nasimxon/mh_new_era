<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/ten_dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/five_dp"
        android:layout_marginRight="@dimen/twenty_dp"
        android:background="@drawable/rounded_rectangle_2"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvIncomeOrExpenseType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/tvSmsParseRecieveAmount"
                android:paddingLeft="@dimen/five_dp"
                android:text="@string/income_degree"
                android:textColor="@color/for_darker"
                android:textSize="@dimen/sixteen_dp" />
            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="@dimen/sixteen_dp"
                android:layout_height="@dimen/sixteen_dp"
                android:layout_alignBottom="@+id/tvIncomeOrExpenseType"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_more_vert_black_48dp" />
            <TextView
                android:id="@+id/tvSmsParseRecieveAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/five_dp"
                android:layout_toLeftOf="@+id/imageView8"
                android:layout_toStartOf="@+id/imageView8"
                android:text="+ 300$"
                android:textColor="@color/green_light"
                android:textSize="@dimen/sixteen_dp" />
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_marginTop="@dimen/four_dp"
            android:background="@color/green_light_forline" />
        <TextView
            android:id="@+id/tvSmsParseRecieveBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:paddingBottom="@dimen/five_dp"
            android:paddingLeft="@dimen/five_dp"
            android:paddingRight="@dimen/five_dp"
            android:text="Oplata za obslugu sostavlyaet 300.0 $. Vy mojete dlya udobnogo polzovaniya nashu prilojeniyu ! Vash balans 200 041 $. National Bank Uzbekistan"
            android:textColor="@color/for_darker"
            android:textSize="@dimen/fourteen_dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/two_dp"
            android:orientation="horizontal"
            android:id="@+id/llSmsRecive">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/six_dp"
                android:layout_marginRight="@dimen/six_dp"
                android:layout_weight="1"
                android:background="@drawable/days_shape_green"
                android:gravity="center"
                android:paddingBottom="@dimen/eight_dp"
                android:paddingTop="@dimen/eight_dp"
                android:id="@+id/tvAddSmsParseItemIncome"
                android:text="@string/it_is_income"
                android:textColor="@color/green_light"
                android:textSize="@dimen/fourteen_dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:layout_weight="1"
                android:background="@drawable/days_shape_red"
                android:gravity="center"
                android:paddingBottom="@dimen/eight_dp"
                android:paddingTop="@dimen/eight_dp"
                android:text="@string/it_is_expense"
                android:id="@+id/tvAddSmsParseItemExpance"
                android:textColor="@color/red_green_darker_monoxrom_red"
                android:textSize="@dimen/fourteen_dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvSmsParseSuccessDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ten_dp"
        android:gravity="right"
        android:paddingRight="@dimen/fourty_dp"
        android:text="26.10.2016   20:32"
        android:textColor="#d6d6d6"
        android:textSize="@dimen/twelve_dp"
        android:textStyle="italic" />
</LinearLayout>