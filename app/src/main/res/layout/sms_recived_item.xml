<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"


    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/twenty_dp"
        android:layout_marginLeft="@dimen/five_dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_rectangle_2"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvIncomeOrExpenseType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Income :"
                android:paddingLeft="@dimen/five_dp"
                android:textSize="@dimen/sixteen_dp"
                android:textColor="@color/for_darker"
                android:layout_toLeftOf="@+id/textView16"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:layout_width="@dimen/sixteen_dp"
                android:layout_height="@dimen/sixteen_dp"
                android:src="@drawable/ic_more_vert_black_48dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/tvIncomeOrExpenseType"
                android:id="@+id/imageView8"
                android:layout_alignParentTop="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 300$"
                android:textColor="@color/green_light"
                android:textSize="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:layout_toLeftOf="@+id/imageView8"
                android:layout_toStartOf="@+id/imageView8"
                android:id="@+id/textView16" />
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_marginLeft="@dimen/five_dp"
            android:background="@color/green_light_forline"
            android:layout_marginTop="@dimen/four_dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/five_dp"
            android:paddingLeft="@dimen/five_dp"
            android:paddingBottom="@dimen/five_dp"
            android:textSize="@dimen/fourteen_dp"
            android:textColor="@color/for_darker"
            android:text="Oplata za obslugu sostavlyaet 300.0 $. Vy mojete dlya udobnogo polzovaniya nashu prilojeniyu ! Vash balans 200 041 $. National Bank Uzbekistan"
            android:layout_marginTop="@dimen/five_dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="@dimen/twelve_dp"
        android:textStyle="italic"
        android:textColor="#d6d6d6"
        android:paddingRight="@dimen/fourty_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:text="26.10.2016   20:32"/>
</LinearLayout>