<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llAccountInfoHead">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:layout_marginBottom="@dimen/six_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ivExCurrencyAdd"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="@dimen/ten_dp"
                android:paddingLeft="@dimen/ten_dp"
                android:layout_marginTop="@dimen/twentyfive_dp"
                >

                <ImageView
                    android:id="@+id/ivAccountItemSendPurpose"
                    android:layout_width="@dimen/twentyfive_dp"
                    android:layout_height="@dimen/twentyfive_dp"
                    android:src="@drawable/change_rate" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:gravity="center"
                    android:textSize="@dimen/ten_dp"
                    android:text="@string/change_rate"
                    android:textColor="#aeaaaa" />

            </LinearLayout>
            <FrameLayout
                android:layout_width="2px"
                android:layout_height="@dimen/fifty_dp"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:background="#f1f1f1"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAbrValyuti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BRN"
                    android:maxLength="4"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_marginBottom="@dimen/sevent_dp"
                    android:textColor="@color/black_for_myagkiy_glavniy"
                    android:textSize="@dimen/fourty_dp"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/tvNameValyute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/three_dp"
                    android:textColor="@color/black_for_myagkiy_glavniy"
                    android:gravity="center"
                    android:text="The Belalusian rubl"
                    android:textSize="@dimen/fourteen_dp" />
            </LinearLayout>
            <FrameLayout
                android:layout_width="2px"
                android:layout_height="@dimen/fifty_dp"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:background="#f1f1f1"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:gravity="center"
                android:id="@+id/checkerForClick"
                android:paddingRight="@dimen/ten_dp"
                android:paddingLeft="@dimen/ten_dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/chbCurrencyEditMainCurrency"
                    android:layout_width="@dimen/twentyfive_dp"
                    android:tint="#d1cfd0"
                    android:padding="@dimen/four_dp"
                    android:layout_height="@dimen/twentyfive_dp"
                    android:src="@drawable/blue_background_unchecked" />

                <TextView
                    android:id="@+id/textColorMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:gravity="center"
                    android:textSize="@dimen/ten_dp"
                    android:text="@string/set_to_main"
                    android:textColor="#aeaaaa" />

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ten_dp"
            android:textColor="@color/black_for_maykiy_secodary"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Current rate"
            android:id="@+id/tvAccountInfoFirstPay"
            android:layout_marginTop="@dimen/ten_dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/twentyfive_dp"
            android:textColor="@color/black_for_glavniy_text"
            android:gravity="center_horizontal|top"

            android:text="1P = 0.084$"
            android:id="@+id/tvCurrentCurrencyRate"
            android:layout_marginBottom="@dimen/ten_dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="@dimen/three_dp"
            android:layout_marginRight="@dimen/fourty_dp"
            android:layout_marginLeft="@dimen/fourty_dp"
            android:background="@color/green_light_forline"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llAccountInfoHead"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#fafafa">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:background="@drawable/inforeportrectangle"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twelve_dp"
                android:layout_marginBottom="@dimen/five_dp"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/twelve_dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textSize="@dimen/sixteen_dp"
                    android:textColor="@color/black_for_myagkiy_glavniy"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:gravity="left"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/rate"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:textSize="@dimen/sixteen_dp"
                    android:textColor="@color/black_for_myagkiy_glavniy"
                    android:layout_weight="1"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:background="@color/green_light_forline"/>


            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lvCurrencyEditExchange"
                android:layout_marginLeft="@dimen/twelve_dp"
                android:layout_marginRight="@dimen/twelve_dp"
                android:paddingTop="@dimen/five_dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:layout_weight="1"/>

        </LinearLayout>

    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/six_dp"
        android:background="@drawable/catinfo_shadow"
        android:layout_below="@+id/llAccountInfoHead"/>
</RelativeLayout>
