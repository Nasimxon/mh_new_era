<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <LinearLayout
        android:id="@+id/llPurposeInfoTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPurposeinfoIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icons_1"
            android:layout_marginRight="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPurposeInfoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="computer"
                />

            <TextView
                android:id="@+id/tvPurposeInfoAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 $"
                />

            <TextView
                android:id="@+id/tvPurposeInfoRemained"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 $"
                />

            <TextView
                android:id="@+id/tvPurposeInfoDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.02.2015"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llPurposeInfoTop"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Operations " />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/add_green" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/remove_red" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPurposeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>