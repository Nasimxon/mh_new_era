<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llAccountInfoHead"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/six_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginTop="@dimen/twenty_dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="@dimen/ten_dp"
                android:paddingLeft="@dimen/ten_dp"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:id="@+id/tvPurposeInfoToCash"
                >

                <ImageView
                    android:id="@+id/ivAccountItemSendPurpose"
                    android:layout_width="@dimen/twentyfive_dp"
                    android:layout_height="@dimen/twentyfive_dp"
                    android:tint="#979797"
                    android:src="@drawable/drawer_categoryreport" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:gravity="center"
                    android:textSize="@dimen/ten_dp"
                    android:text="@string/to_purpose"
                    android:textColor="#aeaaaa" />

            </LinearLayout>
            <FrameLayout
                android:layout_width="2px"
                android:layout_height="@dimen/fifty_dp"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:background="#f1f1f1"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/ninetytwo_dp"
                    android:layout_height="@dimen/ninetytwo_dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/stars"/>
                <ImageView
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/ivPurposeinfoIcon"
                    android:layout_width="@dimen/seventy_dp"
                    android:layout_height="@dimen/seventy_dp"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:src="@drawable/icons_17" />

            </RelativeLayout>

            <FrameLayout
                android:layout_width="2px"
                android:layout_height="@dimen/fifty_dp"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:background="#f1f1f1"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:gravity="center"
                android:id="@+id/tvPurposeInfoReplanish"
                android:paddingRight="@dimen/ten_dp"
                android:paddingLeft="@dimen/ten_dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivAccountItemExchange"
                    android:layout_width="@dimen/twentyfive_dp"
                    android:tint="#979797"
                    android:layout_height="@dimen/twentyfive_dp"
                    android:src="@drawable/drawer_categoryreport" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:gravity="center"
                    android:textSize="@dimen/ten_dp"
                    android:text="Перевод на другую счет"
                    android:textColor="#aeaaaa" />

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/tvPurposeInfoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_for_myagkiy_glavniy"
            android:gravity="center"

            android:text="Account my purpose is great"
            android:textSize="@dimen/twenty_dp"
            android:paddingRight="@dimen/fourty_dp"
            android:paddingLeft="@dimen/fourty_dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/twelve_dp"
            android:textColor="@color/black_for_maykiy_secodary"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Acamulate 100%"
            android:id="@+id/tvPurposeInfoLeftAmount"
            android:layout_marginBottom="@dimen/two_dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="@dimen/three_dp"
            android:layout_marginRight="@dimen/fourty_dp"
            android:layout_marginLeft="@dimen/fourty_dp"
            android:background="@color/green_light_forline"/>

        <com.jim.finansia.utils.PercentView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pvPercent"
            android:layout_marginTop="@dimen/six_dp"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_marginBottom="@dimen/sixteen_dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llAccountInfoHead"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#fafafa">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:background="@drawable/inforeportrectangle"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginBottom="@dimen/five_dp"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/ten_dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textSize="@dimen/fourteen_dp"
                    android:textColor="@color/black_for_myagkiy_glavniy"
                    android:gravity="left"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:textSize="@dimen/fourteen_dp"
                    android:textColor="@color/black_for_myagkiy_glavniy"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/amount"
                    android:gravity="right"
                    android:textSize="@dimen/fourteen_dp"
                    android:textColor="@color/black_for_myagkiy_glavniy"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="@dimen/sixteen_dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:id="@+id/ivPurposeInfoFilter"
                    android:src="@drawable/ic_filter"
                    android:layout_marginTop="@dimen/three_dp"
                    android:scaleType="centerInside"
                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginBottom="@dimen/five_dp"
                android:background="@color/green_light_forline"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rvPurposeInfo"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:overScrollMode="never"
                android:layout_weight="1"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/green_light_forline"/>
            <RelativeLayout
                android:id="@+id/forGoneLeftDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/leftdate"
                    android:textSize="@dimen/twelve_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:textColor="@color/black_for_myagkiy_glavniy"
                    android:text="2 month"

                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/ten_dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/left_datee"
                    android:textColor="@color/black_for_myagkiy_glavniy"

                    android:textSize="@dimen/twelve_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:id="@+id/tvLeftDate"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/leftdate"
                    android:layout_toStartOf="@+id/leftdate"
                    android:layout_marginEnd="@dimen/ten_dp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/five_dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_for_myagkiy_glavniy"
                    android:text="@string/total"
                    android:textSize="@dimen/twelve_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:id="@+id/tvCategoryInfoTotal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#62b033"
                    android:textSize="@dimen/twelve_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:id="@+id/totaly" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/six_dp"
        android:background="@drawable/catinfo_shadow"
        android:layout_below="@+id/llAccountInfoHead"/>
</RelativeLayout>
