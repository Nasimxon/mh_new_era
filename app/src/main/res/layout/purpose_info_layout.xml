<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/llPurposeInfoTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPurposeinfoIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icons_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten_dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPurposeInfoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="computer"
                    android:textSize="@dimen/twenty_sp" />

                <TextView
                    android:id="@+id/tvPurposeInfoAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 $"
                    android:textSize="@dimen/twenty_sp" />

                <TextView
                    android:id="@+id/tvPurposeInfoRemained"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 $"
                    android:textSize="@dimen/twenty_sp" />

                <TextView
                    android:id="@+id/tvPurposeInfoDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.02.2015"
                    android:textSize="@dimen/twenty_sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPurposeInfoReplanish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:layout_weight="1"
                android:background="@drawable/knopka_zeleniy"
                android:gravity="center"
                android:text="@string/replanish" />

            <TextView
                android:id="@+id/tvPurposeInfoToCash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:layout_weight="1"
                android:background="@drawable/knopka_zeleniy"
                android:gravity="center"
                android:text="@string/to_earn" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llPurposeInfoTop"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="Operations "
                android:textSize="@dimen/twenty_sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivPurposeInfoDelete"
                    android:layout_width="@dimen/twentyfour_dp"
                    android:layout_height="@dimen/twentyfour_dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/trash" />

                <ImageView
                    android:id="@+id/ivPurposeInfoFilter"
                    android:layout_width="@dimen/twentyfour_dp"
                    android:layout_height="@dimen/twentyfour_dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_filter" />

            </LinearLayout>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPurposeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</RelativeLayout>