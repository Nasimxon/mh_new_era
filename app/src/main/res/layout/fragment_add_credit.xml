<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pustoyy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/llCatEditHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f8f8f8"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageForIcon"
                    android:layout_width="@dimen/seventy_dp"
                    android:layout_height="@dimen/seventy_dp"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:src="@drawable/add_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCatEditName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/three_dp"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:text="@string/loan_name"
                        android:textColor="@color/toolbar_text_color"
                        android:textSize="@dimen/sixteen_dp" />

                    <EditText
                        android:id="@+id/editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/sixteen_dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text"
                        android:ems="10"
                        android:maxLength="22"
                        android:paddingBottom="@dimen/five_dp"
                        android:paddingLeft="@dimen/eight_dp"
                        android:paddingRight="@dimen/eight_dp"
                        android:paddingTop="@dimen/five_dp"
                        android:textColor="@color/toolbar_text_color"
                        android:textSize="@dimen/sixteen_dp">

                        <requestFocus />
                    </EditText>

                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#efefef"
                />

            <RelativeLayout
                android:id="@+id/checkBoxSum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/ten_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:paddingTop="@dimen/ten_dp">

                <TextView
                    android:id="@+id/tvStartSumAccountTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:text="@string/credit_amount"
                    android:textColor="@color/black_for_glavniy_text"
                    android:textSize="@dimen/fourteen_dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@drawable/edit_text"
                android:paddingBottom="@dimen/eight_dp"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/five_dp"
                android:paddingTop="@dimen/eight_dp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/value_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:layout_weight="1"
                    android:background="#fff"
                    android:ems="10"
                    android:hint="@string/taked_value"
                    android:inputType="numberDecimal"
                    android:maxLength="25"
                    android:textColor="@color/black_for_glavniy_text"
                    android:textSize="@dimen/sixteen_dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/etStartMoney"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:gravity="right" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/ten_dp"
                android:paddingTop="@dimen/ten_dp">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:text="@string/percent"
                    android:textColor="@color/black_for_glavniy_text"
                    android:textSize="@dimen/fourteen_dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@drawable/edit_text"
                android:paddingBottom="@dimen/eight_dp"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/five_dp"
                android:paddingTop="@dimen/eight_dp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/procent_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:layout_weight="1"
                    android:background="#fff"
                    android:ems="10"
                    android:hint="@string/value_percent"
                    android:inputType="numberDecimal"
                    android:maxLength="25"
                    android:textColor="@color/black_for_glavniy_text"
                    android:textSize="@dimen/sixteen_dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Spinner
                    android:id="@+id/spinner_procent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/etStartMoney"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:gravity="right" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/ten_dp"
                android:paddingTop="@dimen/ten_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:text="@string/period_of_credit"
                    android:textColor="@color/black_for_glavniy_text"
                    android:textSize="@dimen/fourteen_dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@drawable/edit_text"
                android:paddingBottom="@dimen/eight_dp"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/five_dp"
                android:paddingTop="@dimen/eight_dp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/for_period_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:layout_weight="1"
                    android:background="#fff"
                    android:ems="10"
                    android:hint="@string/payment_period"
                    android:inputType="number"
                    android:maxLength="25"
                    android:textColor="@color/black_for_glavniy_text"
                    android:textSize="@dimen/sixteen_dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Spinner
                    android:id="@+id/spinner_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/for_period_credit"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:gravity="right" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/ten_dp"


                android:paddingTop="@dimen/ten_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:text="@string/interval"
                    android:textColor="@color/black_for_glavniy_text"

                    android:textSize="@dimen/fourteen_dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"

                android:layout_marginRight="@dimen/sixteen_dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text"
                    android:paddingBottom="@dimen/eight_dp"
                    android:paddingLeft="@dimen/ten_dp"
                    android:paddingRight="@dimen/five_dp"
                    android:paddingTop="@dimen/eight_dp">

                    <EditText
                        android:id="@+id/date_pick_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:focusableInTouchMode="false"
                        android:background="#fff"
                        android:ems="10"
                        android:hint="@string/credit_begin_date"
                        android:inputType="numberDecimal"
                        android:maxLength="25"
                        android:textColor="@color/black_for_glavniy_text"
                        android:textSize="@dimen/sixteen_dp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/thirty_dp"
                    android:layout_height="@dimen/fourty_dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:layout_marginRight="@dimen/five_dp"
                    android:padding="@dimen/five_dp"
                    android:src="@drawable/ikitar"
                    android:tint="#c8c8c8" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text"
                    android:paddingBottom="@dimen/eight_dp"
                    android:paddingLeft="@dimen/ten_dp"
                    android:paddingRight="@dimen/five_dp"
                    android:paddingTop="@dimen/eight_dp">

                    <EditText
                        android:id="@+id/date_ends_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/five_dp"
                        android:focusableInTouchMode="false"
                        android:background="#fff"
                        android:ems="10"
                        android:hint="@string/credit_return_date"
                        android:inputType="numberDecimal"
                        android:maxLength="25"
                        android:textColor="@color/black_for_glavniy_text"
                        android:textSize="@dimen/sixteen_dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/ten_dp"
                android:paddingTop="@dimen/ten_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:text="Bank fee"
                    android:textColor="@color/black_for_glavniy_text"
                    android:textSize="@dimen/fourteen_dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@drawable/edit_text"
                android:paddingBottom="@dimen/eight_dp"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/five_dp"
                android:paddingTop="@dimen/eight_dp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/etMonthFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="0%"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:ems="10"
                    android:hint="@string/percent_fee"
                    android:inputType="numberDecimal"
                    android:maxLength="25"
                    android:textColor="@color/black_for_glavniy_text"
                    android:textSize="@dimen/sixteen_dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Spinner
                    android:id="@+id/spBankFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/etStartMoney"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:gravity="right" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/ten_dp"
                android:paddingTop="@dimen/ten_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:text="Credit type*"
                    android:textColor="@color/black_for_glavniy_text"

                    android:textSize="@dimen/fourteen_dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:background="@drawable/edit_text"
                android:paddingBottom="@dimen/eight_dp"
                android:paddingLeft="@dimen/ten_dp"

                android:paddingRight="@dimen/five_dp"
                android:paddingTop="@dimen/eight_dp"
                android:visibility="visible">




                <Spinner
                    android:id="@+id/spTypeLoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"

                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"

                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvWhatAboutType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:text="@string/with_the_even_principal"
                android:textSize="@dimen/twelve_dp" />


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/ten_dp"
                    android:paddingTop="@dimen/ten_dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/sixteen_dp"
                        android:layout_marginRight="@dimen/sixteen_dp"
                        android:text="@string/notif_setting"
                        android:textColor="@color/black_for_glavniy_text"

                        android:textSize="@dimen/fourteen_dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sixteen_dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:background="@drawable/edit_text"
                    android:paddingBottom="@dimen/eight_dp"
                    android:paddingLeft="@dimen/ten_dp"

                    android:paddingRight="@dimen/five_dp"
                    android:paddingTop="@dimen/eight_dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvperido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/spPurposePeriod"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginRight="@dimen/six_dp"
                        android:layout_toLeftOf="@+id/spPurposePeriod"
                        android:layout_toStartOf="@+id/spPurposePeriod"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:text="@string/duration"
                        android:textColor="@color/black_for_glavniy_text"
                        android:textSize="@dimen/sixteen_dp"
                        android:visibility="gone" />


                    <Spinner
                        android:id="@+id/spNotifModeCredit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"

                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_vertical"

                        android:gravity="left" />

                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvAddAutoMarketPerItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/sixteen_dp"
                    android:padding="@dimen/two_dp"
                    android:paddingLeft="@dimen/sixteen_dp"
                    android:paddingRight="@dimen/sixteen_dp" />


            <TextView
                android:id="@+id/tvAboutNotify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:text="@string/about_notifications"
                android:textSize="@dimen/twelve_dp"/>


                <RelativeLayout
                    android:id="@+id/checkInclude"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/sixteen_dp"
                    android:paddingTop="@dimen/ten_dp"
                    android:paddingBottom="@dimen/ten_dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/include_credit_in_balance"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/sixteen_dp"
                        android:layout_marginRight="@dimen/sixteen_dp"
                        android:textColor="@color/black_for_glavniy_text"
                        android:textSize="@dimen/fourteen_dp"
                        android:layout_toLeftOf="@+id/key_for_balance"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        />
                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/sixteen_dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/key_for_balance" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/checkContribution"
                    android:layout_width="match_parent"
                    android:paddingTop="@dimen/ten_dp"
                    android:paddingBottom="@dimen/ten_dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/have_first_contribution"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/sixteen_dp"
                        android:layout_marginRight="@dimen/sixteen_dp"
                        android:textColor="@color/black_for_glavniy_text"
                        android:textSize="@dimen/fourteen_dp"
                        android:layout_toLeftOf="@+id/chbAccountStartSumEnabled"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        />
                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/sixteen_dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/chbAccountStartSumEnabled" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlStartSumContainer"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:background="@drawable/edit_text"
                    android:paddingTop="@dimen/eight_dp"
                    android:paddingBottom="@dimen/eight_dp"
                    android:paddingLeft="@dimen/ten_dp"
                    android:paddingRight="@dimen/five_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginBottom="@dimen/sixteen_dp"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/for_trasaction_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:maxLength="25"
                        android:hint="@string/value_of_contribution"
                        android:textColor="@color/black_for_glavniy_text"
                        android:textSize="@dimen/sixteen_dp"
                        android:background="#fff"
                        android:inputType="numberDecimal"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/spStartMoneyCurrency"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_sceta"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:layout_marginLeft="@dimen/sixteen_dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBottom="@+id/etStartMoney"
                        android:layout_alignParentTop="true" />
                </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/sixteen_dp"
                android:paddingRight="@dimen/sixteen_dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/one_dp"
                    android:background="@color/green_light_forline" />
            </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
