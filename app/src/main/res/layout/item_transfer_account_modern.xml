<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/twentyfive_dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/fourty_dp"
        android:src="@drawable/arrow_green" />

    <ImageView
        android:id="@+id/ivItemTransferAccountEditDelete"
        android:layout_width="@dimen/twentyfive_dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/ten_dp"
        android:src="@drawable/ic_more_hori_black_48dp" />

    <ImageView
        android:id="@+id/ivItemTransferAccountEditBottomLine"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:background="#ededed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="@dimen/ten_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/thirtyfive_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivItemTransferAccountFrom"
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:src="@drawable/icons_29" />

                    <TextView
                        android:id="@+id/tvItemAccountFromName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:gravity="center"
                        android:text="Cash"
                        android:textColor="#414141"
                        android:textSize="@dimen/twelve_dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fifteen_dp"
                    android:layout_marginTop="@dimen/five_dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivItemAccountTo"
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:src="@drawable/icons_30" />

                    <TextView
                        android:id="@+id/tvItemAccountToName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:text="Plastic Card"
                        android:textColor="#414141"
                        android:textSize="@dimen/twelve_dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/five_dp"
                android:paddingTop="@dimen/sixteen_dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvItemAccountAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="500$"
                        android:textColor="#8cc156"
                        android:textSize="@dimen/fourteen_dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_transfers"
                        android:textSize="@dimen/twelve_dp"
                        android:textColor="#c8c8c8" />

                </LinearLayout>

                <ImageView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="#e1e1e1" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvItemAccountDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="12.03.2016"
                        android:textSize="@dimen/fourteen_dp"
                        android:textColor="@color/black_for_myagkiy_glavniy"
                       />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="date of transfer"
                        android:textSize="@dimen/twelve_dp"
                        android:textColor="#c8c8c8" />
                </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>