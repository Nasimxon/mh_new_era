<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/forLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fourteen_dp"
            android:layout_weight="1"
            android:textColor="#414141"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_marginTop="@dimen/sevent_dp"
            android:layout_marginBottom="@dimen/sevent_dp"
            android:text="Category, Subcategory"
            android:id="@+id/tvReportIncomeExpenseDetailName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fourteen_dp"
            android:text="500$"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:id="@+id/tvReportIncomeExpenseDetailAmount"/>
    </LinearLayout>
</LinearLayout>