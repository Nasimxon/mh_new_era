<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jim.finansia.intropage.IntroFrame">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/thirty_dp"
            android:layout_weight="3" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:paddingLeft="@dimen/sixteen_dp"
                android:paddingRight="@dimen/sixteen_dp"
                android:text="@string/let_s_go"
                android:textColor="#414141"
                android:textSize="@dimen/twenty_dp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/seventy_dp"
                android:layout_marginBottom="@dimen/seventy_dp"
                android:layout_marginTop="@dimen/twenty_dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fourty_dp"
                    android:src="@drawable/shadow_buttom_intro"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    />
                <ImageView
                    android:id="@+id/fbDebtBorrowFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ellips_intro"/>
                <ImageView
                    android:layout_width="@dimen/twentyfive_dp"
                    android:layout_height="@dimen/twentyfive_dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/check_sign_oq"
                    android:tint="#fff"
                    android:layout_marginTop="@dimen/twenty_dp"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
