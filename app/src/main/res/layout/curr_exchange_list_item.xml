<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainRootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/five_dp"

    android:descendantFocusability="blocksDescendants">
    <CheckBox
        android:id="@+id/chbCurrencyExchangeListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:button="@drawable/checkbox"
        android:visibility="gone" />
    <TextView
        android:id="@+id/tvCurrencyExchangeListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:text="TextView"
        android:textColor="@color/toolbar_text_color"
        android:textSize="@dimen/sixteen_dp" />
    <TextView
        android:id="@+id/tvCourseValyute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/five_dp"
        android:text="TextView"
        android:textColor="@color/toolbar_text_color"
        android:textSize="@dimen/sixteen_dp"
        />
    <ImageView
        android:layout_width="@dimen/twentyfive_dp"
        android:layout_height="match_parent"
        android:padding="@dimen/one_dp"
        android:src="@drawable/ic_mode_edit_white_24dp"/>
</LinearLayout>
