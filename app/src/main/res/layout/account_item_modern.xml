<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/sevent_dp"
    android:layout_marginLeft="@dimen/eight_dp"
    android:layout_marginRight="@dimen/eight_dp"
    android:background="@drawable/carditem"

    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainViewF"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/sixteen_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/six_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/ten_dp"
                    android:paddingLeft="@dimen/ten_dp"
                    android:layout_marginTop="@dimen/twentyfive_dp"
                    android:id="@+id/llAccountItemPurpose"
                    >

                    <ImageView
                        android:id="@+id/ivAccountItemSendPurpose"
                        android:layout_width="@dimen/twentyfive_dp"
                        android:tint="#c8c8c8"
                        android:layout_height="@dimen/twentyfive_dp"
                        android:src="@drawable/parasen" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/five_dp"
                        android:gravity="center"
                        android:textSize="@dimen/ten_dp"
                        android:text="@string/to_purpose"
                        android:textColor="#c8c8c8" />

                </LinearLayout>
                <FrameLayout
                    android:layout_width="2px"
                    android:layout_height="@dimen/fifty_dp"
                    android:layout_marginTop="@dimen/twentyfive_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:background="#f1f1f1"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/fifteen_dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivAccountItemCurrent"
                        android:layout_width="@dimen/seventy_dp"
                        android:layout_height="@dimen/seventy_dp"

                        android:src="@drawable/icons_17" />


                </LinearLayout>
                <FrameLayout
                    android:layout_width="2px"
                    android:layout_height="@dimen/fifty_dp"
                    android:layout_marginTop="@dimen/twentyfive_dp"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:background="#f1f1f1"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/twentyfive_dp"
                    android:gravity="center"
                    android:id="@+id/llAccountItemOther"
                    android:paddingRight="@dimen/ten_dp"
                    android:paddingLeft="@dimen/ten_dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivAccountItemExchange"
                        android:layout_width="@dimen/twentyfive_dp"
                        android:layout_height="@dimen/twentyfive_dp"
                        android:tint="#c8c8c8"
                        android:src="@drawable/transfer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/five_dp"
                        android:gravity="center"
                        android:textSize="@dimen/ten_dp"
                        android:text="@string/transfer_to_another_acc"
                        android:textColor="#c8c8c8" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvAccountItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_for_myagkiy_glavniy"
                android:gravity="center"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:text="Account"
                android:textSize="@dimen/sixteen_sp" />
            <FrameLayout
                android:id="@+id/withGone"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/twenty_dp"/>
            <LinearLayout
                android:id="@+id/infoOpen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginBottom="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/acc_state"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/fourteen_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:textColor="@color/black_for_maykiy_secodary"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/twentyfour_dp"
                    android:background="@drawable/tableverx"
                    android:orientation="horizontal"
                    android:paddingTop="0dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/it_is_income"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:layout_marginTop="@dimen/three_dp"
                        android:layout_marginBottom="@dimen/three_dp"
                        android:textColor="@color/black_for_myagkiy_glavniy"
                        android:textSize="@dimen/twelve_dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/balance"
                        android:layout_marginTop="@dimen/three_dp"
                        android:layout_marginBottom="@dimen/three_dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black_for_myagkiy_glavniy"
                        android:textSize="@dimen/twelve_dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:text="@string/it_is_expense"
                        android:layout_marginTop="@dimen/three_dp"
                        android:layout_marginBottom="@dimen/three_dp"
                        android:textColor="@color/black_for_myagkiy_glavniy"
                        android:textSize="@dimen/twelve_dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tablevniz"
                    android:paddingBottom="@dimen/five_dp"

                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvAccountItemIncome"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:layout_height="wrap_content"
                        android:text="5000"
                        android:layout_marginTop="@dimen/five_dp"

                        android:gravity="left"
                        android:textColor="@color/green_just"
                        android:textSize="@dimen/twelve_dp" />

                    <TextView
                        android:id="@+id/tvAccountItemBalance"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="5000\n2"
                        android:layout_marginTop="@dimen/five_dp"

                        android:textColor="@color/black_for_myagkiy_glavniy"
                        android:gravity="center"
                        android:textSize="@dimen/twelve_dp" />

                    <TextView
                        android:id="@+id/tvAccountItemExpanse"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_height="wrap_content"
                        android:text="5000"
                        android:gravity="right"
                        android:layout_marginTop="@dimen/five_dp"

                        android:textColor="@color/red"
                        android:textSize="@dimen/twelve_dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>