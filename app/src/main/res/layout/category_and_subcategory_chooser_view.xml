<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_seven_dp"
        android:id="@+id/container"
        android:orientation="horizontal" />
    <com.jim.finansia.utils.calculator.ArcBitmapChooserView
        android:layout_width="match_parent"
        android:layout_height="@dimen/hunder_and_fourty_dp"
        android:id="@+id/abchvSubcategoryChooser"
        android:layout_below="@+id/container"/>
    <com.jim.finansia.utils.calculator.ArcBitmapChooserView
        android:layout_width="match_parent"
        android:layout_height="@dimen/hunder_and_fourty_dp"
        android:id="@+id/abchvCategoryChooser"/>
</RelativeLayout>