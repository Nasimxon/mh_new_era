<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/sevent_dp"
    android:layout_marginLeft="@dimen/eight_dp"
    android:layout_marginRight="@dimen/eight_dp"
    android:layout_marginTop="@dimen/two_dp"
    android:background="#000"
    card:cardCornerRadius="@dimen/eight_dp"
    card:cardElevation="@dimen/five_dp"
    card:cardMaxElevation="@dimen/ten_dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingTop="@dimen/ten_dp">

        <LinearLayout
            android:id="@+id/linlay_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/ivItemAutoMarketCategory"
                android:layout_width="@dimen/seventy_dp"
                android:layout_height="@dimen/seventy_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:padding="@dimen/ten_dp"
                android:src="@android:drawable/ic_menu_camera" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/six_dp"
                    >
                    <TextView
                        android:id="@+id/tvItemAutoMarketCatName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Home"
                        android:textColor="@color/black_for_glavniy_text"
                        android:textSize="@dimen/eightteen_dp"
                        android:layout_toLeftOf="@+id/tvItemAutoMarketAmount"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:id="@+id/tvItemAutoMarketAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="left"
                        android:text="504,25 $"
                        android:textColor="#008c0e"
                        android:textSize="@dimen/eightteen_dp"
                        android:layout_marginRight="@dimen/sixteen_dp"
                        android:layout_alignBottom="@+id/tvItemAutoMarketCatName"
                        android:layout_alignParentTop="true" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvItemAutoMarketSubCatName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/fourteen_dp"
                    android:gravity="left"
                    android:text="Repair"
                    android:visibility="visible"
                    android:textColor="@color/black_for_secondary_text"
                    android:textSize="@dimen/sixteen_dp" />


            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/ivLine"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@id/linlay_first"
            android:background="@color/green_light_forline"
            android:layout_marginTop="@dimen/four_dp"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivLine"
            android:background="@color/grey_light2"
            >
            <RelativeLayout
                android:id="@+id/realrt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/six_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/twelve_dp"
                    android:gravity="bottom"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black_for_glavniy_text"
                    android:id="@+id/tvNal"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_alignParentTop="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account :"
                    android:textSize="@dimen/twelve_dp"
                    android:textColor="@color/for_darker"
                    android:id="@+id/textView2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/left_date"
                    android:layout_toStartOf="@+id/left_date" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlAutoMarketItem"
                android:layout_below="@+id/realrt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tvItemAutoMarketPerType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:paddingLeft="@dimen/ten_dp"
                    android:layout_marginBottom="@dimen/six_dp"
                    android:gravity="right"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:text="12"
                    android:textColor="@color/black_for_glavniy_text"
                    android:textSize="@dimen/twelve_dp"
                    android:layout_alignTop="@+id/tvPer"
                    android:layout_toRightOf="@+id/tvPer"
                    android:layout_toEndOf="@+id/tvPer" />

                <TextView
                    android:id="@+id/tvPer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:gravity="left"
                    android:text="Periods :"
                    android:textColor="@color/for_darker"
                    android:textSize="@dimen/twelve_dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlAutoMarketItem"
                android:layout_marginTop="@dimen/five_dp"
                android:background="@color/grey_light2"
                android:gravity="center"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/sixteen_dp"
                android:paddingRight="@dimen/sixteen_dp">

                <TextView
                    android:id="@+id/tvAutoMarketItemEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/five_dp"
                    android:layout_weight="1"
                    android:background="@drawable/knopka_zeleniy"
                    android:gravity="center"
                    android:text="@string/to_edit"
                    android:textColor="@color/green_light"
                    android:textSize="@dimen/twelve_sp" />

                <TextView
                    android:id="@+id/tvAutoMarketItemDelete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/five_dp"
                    android:layout_weight="1"
                    android:background="@drawable/knopka_zeleniy"
                    android:gravity="center"
                    android:text="@string/delete"
                    android:textColor="@color/green_light"
                    android:textSize="@dimen/twelve_sp" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
