<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainview"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginRight="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/five_dp"
        android:layout_marginTop="@dimen/three_dp"
        card:cardMaxElevation="@dimen/five_dp"
        card:cardElevation="@dimen/three_dp"
        card:cardCornerRadius="@dimen/eight_dp"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ivRecordDetail"
                    android:layout_width="@dimen/thirty_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:src="@drawable/icons_3"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:layout_marginTop="@dimen/ten_dp" />
                <CheckBox
                    android:id="@+id/chbRecordFragmentDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:visibility="gone"/>
            </RelativeLayout>
            <FrameLayout
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/green_light_forline"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/sixteen_dp"
                android:paddingBottom="@dimen/ten_dp"
                android:background="@color/grey_light2"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linForf">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/ten_dp"
                        android:layout_marginBottom="@dimen/three_dp"
                        android:id="@+id/relativeLayout3">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvRecordDetailCategoryAmount"
                            android:text="-55,00$"
                            android:textSize="@dimen/sixteen_dp"
                            android:textColor="@color/red"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="@dimen/sixteen_dp"
                            android:gravity="bottom|right"
                            android:layout_alignTop="@+id/linearLayout6"
                            android:layout_alignBottom="@+id/linearLayout6" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/linearLayout6"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">
                            <TextView
                                android:id="@+id/tvRecordDetailCategoryName"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text=""
                                android:textStyle="bold"
                                android:textSize="@dimen/sixteen_dp"
                                android:textColor="@color/black_for_glavniy_text"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/ten_dp"
                        android:id="@+id/relativeLayout4">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/linearLayout7"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true">
                            <TextView
                                android:id="@+id/type"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/type"
                                android:textSize="@dimen/sixteen_dp"
                                android:textColor="@color/black_for_glavniy_text"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/type_search_item"
                            android:text="Recking"
                            android:textSize="@dimen/sixteen_dp"
                            android:textColor="@color/black_for_glavniy_text"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="@dimen/sixteen_dp"
                            android:gravity="top|right"
                            android:layout_alignTop="@+id/linearLayout7"
                            android:layout_alignBottom="@+id/linearLayout7" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/ten_dp"
                        android:id="@+id/relativeLayout6">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/linearLayout9"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true">
                            <TextView
                                android:id="@+id/acct"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/accountdo"
                                android:textSize="@dimen/sixteen_dp"
                                android:textColor="@color/black_for_glavniy_text"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/accountName"
                            android:text="@string/not_exist"
                            android:textSize="@dimen/sixteen_dp"
                            android:textColor="@color/black_for_glavniy_text"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="@dimen/sixteen_dp"
                            android:gravity="top|right"
                            android:layout_alignTop="@+id/linearLayout9"
                            android:layout_alignBottom="@+id/linearLayout9" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/ten_dp"
                        android:layout_marginBottom="@dimen/ten_dp"
                        android:id="@+id/relativeLayout5">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/linearLayout8"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true">
                            <TextView
                                android:id="@+id/datee"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/date_with_two_dots"
                                android:textSize="@dimen/sixteen_dp"
                                android:textColor="@color/black_for_glavniy_text"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dateToSearch"
                            android:text="20.06.2016"
                            android:textSize="@dimen/sixteen_dp"
                            android:textColor="@color/black_for_glavniy_text"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="@dimen/sixteen_dp"
                            android:gravity="top|right"
                            android:layout_alignTop="@+id/linearLayout8"
                            android:layout_alignBottom="@+id/linearLayout8" />
                    </RelativeLayout>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/for_gone_a"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/green_light_forline"
                    android:visibility="visible"
                    android:layout_below="@+id/linForf" />
                <RelativeLayout
                    android:id="@+id/visibleIfCommentHave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/ten_dp"
                    android:layout_marginTop="@dimen/six_dp"
                    android:layout_below="@+id/linForf">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sixteen_dp"
                        android:textColor="@color/black_for_glavniy_text"
                        android:text="@string/comment_degree"
                        android:id="@+id/textView19" />
                    <TextView
                        android:id="@+id/tvComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fourteen_dp"
                        android:layout_marginRight="@dimen/sixteen_dp"
                        android:gravity="left"
                        android:textColor="@color/black_for_secondary_text"
                        android:text="Some tag about how you  choese your aplication from anouther"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView19" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>