<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/sevent_dp"
        android:layout_marginLeft="@dimen/sevent_dp"
        android:layout_marginBottom="@dimen/five_dp"
        android:background="@drawable/carditem"
        android:padding="@dimen/five_dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageResurs"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/seventy_dp"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:src="@drawable/icons_3"/>
        <TextView
            android:id="@+id/textResurs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:textSize="@dimen/fourteen_dp"
            android:text="Account"
            android:gravity="center_vertical"
            android:textColor="@color/black_for_glavniy_text"
            />
    </LinearLayout>
</LinearLayout>