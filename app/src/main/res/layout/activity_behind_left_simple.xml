<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/left_drawer_width"
    android:layout_height="match_parent" >
	<RelativeLayout
		style="@style/behindMenuScrollContent"
		android:layout_width="match_parent"
		android:layout_height="match_parent" >
		<LinearLayout
			android:id="@+id/rlDrawerHeader"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/drawer_top_background"
			android:orientation="vertical">
			<com.jim.pocketaccounter.utils.CircleImageView
					android:id="@+id/userphoto"
					android:layout_width="@dimen/fifty_dp"
					android:layout_height="@dimen/fifty_dp"
					android:src="@drawable/no_photo"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="@dimen/twentyfive_dp"
					android:layout_marginBottom="@dimen/ten_dp"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView
					android:id="@+id/tvToolbarName"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/please_sign"
					android:textColor="#414141"
					android:textSize="@dimen/twelve_sp"
					android:textStyle="bold"
					android:gravity="center"
					android:layout_gravity="center_horizontal"
					android:layout_marginLeft="@dimen/ten_dp"
					android:layout_marginRight="@dimen/ten_dp"/>
				<TextView
					android:id="@+id/tvGoogleMail"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/two_dp"
					android:text="@string/and_sync_your_data"
					android:layout_gravity="center_horizontal"
					android:textColor="#a7a7a7"
					android:textSize="@dimen/ten_sp"
					android:gravity="center"
					android:layout_marginBottom="@dimen/ten_dp"
					android:layout_marginLeft="@dimen/ten_dp"
					android:layout_marginRight="@dimen/ten_dp"/>
				<Button
					android:layout_width="wrap_content"
					android:layout_height="@dimen/twentyeight_dp"
					android:text="@string/login"
					android:id="@+id/btnFirebaseLogin"
					android:layout_marginBottom="@dimen/fifteen_dp"
					android:layout_gravity="center_horizontal"
					android:textSize="@dimen/twelve_dp"
					android:background="@drawable/drawer_login_button_shape"/>
			</LinearLayout>
		</LinearLayout>
		<ListView
			android:id="@+id/lvLeftMenu"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:divider="#c1c1c1"
			android:dividerHeight="1px"
			android:layout_below="@+id/rlDrawerHeader"
			android:scrollbars="none"
			android:background="#ffffff">
		</ListView>
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/four_dp"
			android:background="@drawable/drawer_top_drop_shadow"
			android:layout_below="@+id/rlDrawerHeader"/>
	</RelativeLayout>
	<FrameLayout
		android:layout_width="@dimen/four_dp"
		android:layout_height="match_parent"
		android:background="@drawable/drawer_right_shadow"
		android:layout_alignParentRight="true"></FrameLayout>
</RelativeLayout>