<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/sevent_dp"
    android:layout_marginLeft="@dimen/ten_dp"
    android:layout_marginRight="@dimen/ten_dp"
    android:background="@drawable/carditem"
    >

    <ImageView
        android:id="@+id/ivAutoMarketItemDelete"
        android:layout_width="@dimen/twentyfive_dp"
        android:layout_height="@dimen/twentyfive_dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_more_hori_black_48dp"
        android:tint="#e3e3e3"
        android:layout_marginRight="@dimen/ten_dp"
        android:layout_marginTop="@dimen/three_dp"
        />

    <LinearLayout
        android:id="@+id/llAutoMarketTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/twelve_sp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivItemAutoMarketCategoryIcon"
            android:layout_width="@dimen/seventy_dp"
            android:layout_height="@dimen/seventy_dp"
            android:layout_gravity="center"
            android:src="@drawable/icons_2" />

        <TextView
            android:id="@+id/tvItemAutoMarketCatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/three_dp"
            android:text="Auto"
            android:textColor="#414141"
            android:textSize="@dimen/seventeen_dp" />

        <TextView
            android:id="@+id/tvItemAutoMarketSubCatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Motor"
            android:textColor="#c8c8c8"
            android:textSize="@dimen/sixteen_dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAutoMarketTop2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llAutoMarketTop"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="@dimen/five_dp"
            android:background="@color/green_light_forline" />

        <LinearLayout
            android:id="@+id/llAutoMarketItemSwitchMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:paddingRight="@dimen/sixteen_dp">

                <TextView
                    android:id="@+id/tvItemAutoMarketRvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/fourteen_sp" />

                <ImageView
                    android:id="@+id/ivItemAutoMarketOperationDelete"
                    android:layout_width="@dimen/sixteen_dp"
                    android:layout_height="@dimen/sixteen_dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/trash" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvAutoMarketItemDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivItemAutoMarketOperationDelete"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAutoMarketItemDefaultMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/ten_dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount"
                    android:textColor="#838383"
                    android:textSize="@dimen/sixteen_dp" />


                <TextView
                    android:id="@+id/tvAutoMarketItemAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500$"
                    android:textColor="@color/green_pay_cheti"
                    android:textSize="@dimen/sixteen_dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fbfbfb"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="For Account"
                    android:textColor="#838383"
                    android:textSize="@dimen/sixteen_dp" />

                <TextView
                    android:id="@+id/tvAutoMarketItemAccountName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash"
                    android:textSize="@dimen/sixteen_dp" />

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/green_light_forline" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llAutoMarketTop2"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/ten_dp"
        >

        <LinearLayout
            android:id="@+id/llAutoMarketOperationDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/ten_dp"
            >

            <ImageView
                android:id="@+id/ivCalendar"
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:layout_gravity="center"
                android:src="@drawable/oper"
                android:tint="#c8c8c8" />

            <TextView
                android:id="@+id/tvOperation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/ten_dp"
                android:text="Operations \ndays"
                android:textColor="#c8c8c8"
                android:textSize="@dimen/sixteen_dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAutoMarketNextOperationDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivClock"
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:layout_gravity="center"
                android:src="@drawable/circulate"
                android:tint="#c8c8c8" />

            <TextView
                android:id="@+id/tvAutoMarketItemNextDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/ten_dp"
                android:text="Next Operations \n15 days"
                android:textColor="#c8c8c8"
                android:textSize="@dimen/sixteen_dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
