<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:id="@+id/moainnnn"
    android:layout_height="wrap_content"
    tools:context="com.jim.pocketaccounter.fragments.InfoCreditFragment"
    android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/debt_borrow_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/sevent_dp"
        android:paddingLeft="@dimen/eight_dp"
        android:paddingRight="@dimen/eight_dp"
        android:paddingTop="@dimen/sevent_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gggdgdd"
            android:layout_marginBottom="@dimen/six_dp"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_marginTop="@dimen/six_dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llDebtBOrrowItemEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/ten_dp">

                <ImageView
                    android:id="@+id/ivAccountItemSendPurpose"
                    android:layout_width="@dimen/twentyfive_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:src="@drawable/schedule"
                    android:tint="#c7c7c7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:gravity="center"
                    android:text="@string/schedule"
                    android:textColor="#aeaaaa"
                    android:textSize="@dimen/ten_dp" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="@dimen/one_dp"
                android:layout_height="@dimen/fifty_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:background="#f1f1f1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_creditt"
                    android:layout_width="@dimen/seventy_dp"
                    android:layout_height="@dimen/seventy_dp"
                    android:layout_marginTop="@dimen/twelve_dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/iconforpr"
                     />

            </LinearLayout>

            <FrameLayout
                android:layout_width="@dimen/one_dp"
                android:layout_height="@dimen/fifty_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:background="#f1f1f1" />

            <LinearLayout
                android:id="@+id/frameLayout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/ten_dp"
                android:paddingRight="@dimen/ten_dp">

                <ImageView
                    android:layout_width="@dimen/thirty_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:src="@drawable/yellow_mony" />

                <TextView
                    android:id="@+id/paybut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:gravity="center"
                    android:text="@string/payment"
                    android:textColor="@color/credit_yellow"
                    android:textSize="@dimen/ten_dp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/name_of_credit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/three_dp"
            android:layout_marginBottom="@dimen/three_dp"
            android:gravity="center"
            android:text="Account"
            android:layout_below="@+id/gggdgdd"
            android:textColor="@color/black_for_myagkiy_glavniy"
            android:textSize="@dimen/sixteen_sp" />
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/debt_borrow_top"
        android:layout_marginBottom="@dimen/twenty_dp"
        android:orientation="vertical"
        android:background="#fbfbfb"
        android:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#eaeaea" />

        <RelativeLayout
            android:id="@+id/infoooc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/five_dp"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:layout_marginBottom="@dimen/eight_dp"
                android:text="Preview all details"
                android:textColor="#a4a4a4"
                android:textSize="@dimen/sixteen_sp" />

            <ImageView
                android:id="@+id/wlyuzik_opener"
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:layout_alignTop="@+id/tvInfo"
                android:layout_toEndOf="@+id/tvInfo"
                android:layout_toRightOf="@+id/tvInfo"
                android:padding="@dimen/four_dp"
                android:src="@drawable/shape_3" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#eaeaea" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/shlyuzik"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/info"
        android:visibility="gone">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/infoOpen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/sixteen_dp"
                    android:paddingTop="@dimen/five_dp"
                    android:paddingBottom="@dimen/five_dp"
                    android:paddingRight="@dimen/sixteen_dp"
                    >

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/procent_of_credit"
                        android:textColor="#838383"
                        android:textSize="@dimen/sixteen_sp" />

                    <TextView
                        android:id="@+id/procentCredInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="15%"
                        android:textColor="#414141"
                        android:textSize="@dimen/sixteen_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fbfbfb"
                    android:paddingLeft="@dimen/sixteen_dp"
                    android:paddingTop="@dimen/five_dp"
                    android:paddingBottom="@dimen/five_dp"
                    android:paddingRight="@dimen/sixteen_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/total_credit_value"
                        android:textColor="#838383"
                        android:textSize="@dimen/sixteen_sp" />

                    <TextView
                        android:id="@+id/takedValueInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="5000$"
                        android:textColor="#414141"
                        android:textSize="@dimen/sixteen_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/five_dp"
                    android:paddingBottom="@dimen/five_dp"
                    android:paddingLeft="@dimen/sixteen_dp"
                    android:paddingRight="@dimen/sixteen_dp">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/with_interest"
                        android:textColor="#838383"
                        android:textSize="@dimen/sixteen_sp" />

                    <TextView
                        android:id="@+id/totalReturnValueInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="6200$"
                        android:textColor="#414141"
                        android:textSize="@dimen/sixteen_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fbfbfb"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/sixteen_dp"
                    android:paddingTop="@dimen/five_dp"
                    android:paddingBottom="@dimen/five_dp"
                    android:paddingRight="@dimen/sixteen_dp">

                    <TextView
                        android:id="@+id/tvEndPeriodDayTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/period_ends"
                        android:textColor="#838383"
                        android:textSize="@dimen/sixteen_sp" />

                    <TextView
                        android:id="@+id/tvEndPeriodDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="15 days"
                        android:textColor="#414141"
                        android:textSize="@dimen/sixteen_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/five_dp"
                    android:paddingBottom="@dimen/five_dp"
                    android:paddingLeft="@dimen/sixteen_dp"
                    android:paddingRight="@dimen/sixteen_dp">

                    <TextView
                        android:id="@+id/tvPeriodPaymentTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/period_payment"
                        android:textColor="#838383"
                        android:textSize="@dimen/sixteen_sp" />

                    <TextView
                        android:id="@+id/tvPeriodPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="380$"
                        android:textColor="@color/credit_yellow"
                        android:textSize="@dimen/sixteen_sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fbfbfb"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/sixteen_dp"
                    android:paddingTop="@dimen/five_dp"
                    android:paddingBottom="@dimen/five_dp"
                    android:paddingRight="@dimen/sixteen_dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/in_the_balance"
                        android:textColor="#838383"
                        android:textSize="@dimen/sixteen_sp" />

                    <TextView
                        android:id="@+id/it_is_include_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Include"
                        android:textColor="#414141"
                        android:textSize="@dimen/sixteen_sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/five_dp"
                    android:paddingBottom="@dimen/five_dp"
                    android:paddingLeft="@dimen/sixteen_dp"
                    android:paddingRight="@dimen/sixteen_dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/taked_date"
                        android:textColor="#838383"
                        android:textSize="@dimen/sixteen_sp" />

                    <TextView
                        android:id="@+id/takedtimeInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="15 Nov, 2016"
                        android:textColor="#414141"
                        android:textSize="@dimen/sixteen_sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fbfbfb"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/sixteen_dp"
                    android:paddingTop="@dimen/five_dp"
                    android:paddingBottom="@dimen/five_dp"
                    android:paddingRight="@dimen/sixteen_dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/period_of_credit2"
                        android:textColor="#838383"
                        android:textSize="@dimen/sixteen_sp" />

                    <TextView
                        android:id="@+id/intervalCreditInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="2 years"
                        android:textColor="#414141"
                        android:textSize="@dimen/sixteen_sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/five_dp"
                    android:paddingBottom="@dimen/five_dp"
                    android:paddingLeft="@dimen/sixteen_dp"
                    android:paddingRight="@dimen/sixteen_dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/total_payed"
                        android:textColor="#838383"
                        android:textSize="@dimen/sixteen_sp" />

                    <TextView
                        android:id="@+id/tvBalancePer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="3200$"
                        android:textColor="#414141"
                        android:textSize="@dimen/sixteen_sp" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/rlBottom"
        android:background="#eaeaea" />

    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="@dimen/ten_dp">

        <TextView
            android:id="@+id/tvHide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivHide"
            android:layout_margin="@dimen/five_dp"
            android:layout_toEndOf="@+id/ivHide"
            android:layout_toRightOf="@+id/ivHide"
            android:text="Hide detials"
            android:textColor="@color/black_for_maykiy_secodary"
            android:textSize="@dimen/sixteen_sp" />

        <ImageView
            android:id="@+id/ivHide"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/eye" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/shlyuzik"
        android:layout_centerHorizontal="true"
        android:background="#fafafa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:background="@drawable/inforeportrectangle"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginLeft="@dimen/eighteen_sp"
                android:layout_marginRight="@dimen/ten_dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Transitions list"
                    android:gravity="center_vertical"
                    android:textColor="#c8c8c8"
                    android:textSize="@dimen/sixteen_dp"/>

                <ImageView
                    android:id="@+id/frameLayout3"
                    android:layout_width="@dimen/twentyfive_dp"
                    android:layout_height="@dimen/twentyfive_dp"
                    android:src="@drawable/subcat_delete"
                    android:tint="#c8c8c8"
                    android:padding="2dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    />
                <ImageView
                    android:id="@+id/cancel_button"
                    android:layout_width="@dimen/twentyfive_dp"
                    android:layout_height="@dimen/twentyfive_dp"
                    android:src="@drawable/cancel_seriy"
                    android:tint="#c8c8c8"
                    android:padding="3dp"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/ten_dp"
                    />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_for_transactions"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_weight="1"
                android:overScrollMode="never" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/green_light_forline" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:layout_weight="1"
                    android:background="#fbfbfb"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/five_dp"
                    android:paddingTop="@dimen/five_dp">

                    <TextView
                        android:id="@+id/tvTotalPayed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Total payed: "
                        android:textColor="@color/black_for_maykiy_secodary"
                        android:textSize="@dimen/twelve_dp" />

                    <TextView
                        android:id="@+id/tvResidue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginBottom="@dimen/five_dp"
                        android:text="Residue: "
                        android:textColor="@color/black_for_maykiy_secodary"
                        android:textSize="@dimen/twelve_dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/sixteen_dp"
                    android:background="#fbfbfb" android:paddingTop="@dimen/five_dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/total_transaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="4500$"
                        android:textColor="@color/bar_income"
                        android:textSize="@dimen/twelve_dp" />
                    <TextView
                        android:id="@+id/value_credit_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="200$"
                        android:textColor="@color/black_for_myagkiy_glavniy"
                        android:textSize="@dimen/twelve_dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/six_dp"
            android:background="@drawable/catinfo_shadow"
            />
    </RelativeLayout>
</RelativeLayout>