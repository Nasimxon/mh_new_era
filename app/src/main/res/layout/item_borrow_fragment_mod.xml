<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/sevent_dp"
    android:background="@drawable/carditem"
    android:layout_marginRight="@dimen/ten_dp"
    android:layout_marginLeft="@dimen/ten_dp">

    <LinearLayout
        android:id="@+id/llItemDebtBorrowTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/eight_dp"
        android:layout_marginRight="@dimen/eight_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/llItemDebtBorrowSms"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:src="@drawable/sms"
                android:tint="#ddc731" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:text="@string/sms"
                android:textColor="#ddc731"
                android:textSize="@dimen/fourteen_dp"
                />

        </LinearLayout>

        <FrameLayout
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/fourtyfive_dp"
            android:layout_marginBottom="@dimen/fiftyfive_dp"
            android:layout_gravity="center_vertical"
            android:background="#f1f1f1"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/ten_dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/seventy_dp"
                android:layout_height="@dimen/seventy_dp"
                app:border_width="2px"
                android:layout_gravity="center"
                app:border_color="@color/green_light_forline"

                android:id="@+id/imBorrowPerson"
                android:src="@drawable/no_photo"
                android:transitionName="imageView"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/sixteen_dp"
                android:gravity="center"
                android:textColor="#414141"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_marginBottom="@dimen/ten_dp"
                android:id="@+id/tvBorrowPersonName"
                android:text="Stive \nJobs" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/fourtyfive_dp"
            android:layout_marginBottom="@dimen/fiftyfive_dp"
            android:background="#f1f1f1"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/llItemDebtBorrowCall"
            >

            <ImageView
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/thirty_dp"
                android:src="@drawable/call"
                android:tint="#8cc156"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:text="@string/call"
                android:textColor="#8cc156"
                android:textSize="@dimen/fourteen_dp"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llItemDebtBorrowMiddle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llItemDebtBorrowTop"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#f1f1f1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/six_dp"
            android:paddingTop="@dimen/six_dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/sixteen_dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/residue1"
                android:layout_marginLeft="@dimen/ten_dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten_dp"
                android:id="@+id/tvItemDebtBorrowLeft"
                android:textColor="#8cc156"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:gravity="right"
                android:textSize="@dimen/sixteen_dp"
                android:text="1200$" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#f1f1f1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/eight_dp"
            android:paddingTop="@dimen/six_dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:textSize="@dimen/sixteen_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:text="@string/return_deadline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sixteen_dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="@dimen/ten_dp"
                android:id="@+id/tvItemDebtBorrowLeftDate"
                android:text="20 days" />

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#f1f1f1"
            android:layout_marginBottom="@dimen/sixteen_dp"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llItemDebtBorrowMiddle"
        android:background="@drawable/green_pay_background"
        android:visibility="visible"
        android:id="@+id/flItemDebtBorrowPay"
        android:layout_marginLeft="@dimen/fourteen_dp"
        android:layout_marginRight="@dimen/fourteen_dp"
        android:layout_marginBottom="@dimen/fourteen_dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/ten_dp"
            android:text="@string/payy"
            android:textStyle="bold"
            android:textColor="@color/green_pay_cheti"
            android:id="@+id/btBorrowPersonPay"
            android:textSize="@dimen/sixteen_dp" />

    </FrameLayout>

