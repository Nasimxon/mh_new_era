<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <com.jim.finansia.utils.reportviews.CategorySliding
            android:id="@+id/csReportByCategory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_eighty_one_dp"
            android:layout_above="@+id/shlyuzik" />

        <LinearLayout
            android:id="@+id/llPickDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/sixteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="@drawable/date_picker_shape"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/eight_dp"
            android:paddingLeft="@dimen/sixteen_dp"
            android:paddingRight="@dimen/sixteen_dp"
            android:paddingTop="@dimen/eight_dp">

            <TextView
                android:id="@+id/tvBeginDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C: 25 Nov, 2016"
                android:textColor="@color/black_for_myagkiy_glavniy"
                android:textSize="@dimen/fourteen_dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:paddingBottom="@dimen/two_dp"
                android:paddingTop="@dimen/two_dp"
                android:src="@drawable/arrow_right" />

            <TextView
                android:id="@+id/tvEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="До: 25 Nov, 2016"
                android:textColor="@color/black_for_myagkiy_glavniy"
                android:textSize="@dimen/fourteen_dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f3f5"
        android:orientation="vertical"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/six_dp"
            android:background="@drawable/catinfo_shadow" />

        <android.support.v7.widget.RecyclerView

            android:id="@+id/rvReportByCategorySubcatPercents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clipToPadding="false"
            android:paddingTop="@dimen/ten_dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTotal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/three_hundred_dp"
            android:orientation="vertical"
            android:padding="@dimen/ten_dp"
            android:gravity="center"
            >
            <lecho.lib.hellocharts.view.PieChartView
                android:layout_weight="1"
                android:id="@+id/pieChart"
                android:padding="@dimen/ten_dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="0dp" />

            <LinearLayout
                android:id="@+id/llPickDateTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/sixteen_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:background="@drawable/date_picker_shape"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/eight_dp"
                android:paddingLeft="@dimen/sixteen_dp"
                android:paddingRight="@dimen/sixteen_dp"
                android:paddingTop="@dimen/eight_dp">

                <TextView
                    android:id="@+id/tvBeginDateTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C: 25 Nov, 2016"
                    android:textColor="@color/black_for_myagkiy_glavniy"
                    android:textSize="@dimen/fourteen_dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:paddingBottom="@dimen/two_dp"
                    android:paddingTop="@dimen/two_dp"
                    android:src="@drawable/arrow_right" />

                <TextView
                    android:id="@+id/tvEndDateTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="До: 25 Nov, 2016"
                    android:textColor="@color/black_for_myagkiy_glavniy"
                    android:textSize="@dimen/fourteen_dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rlTotalInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f3f5"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#e8e8e8"
                />
            <LinearLayout
                android:id="@+id/llRadioGroupStripe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/expenseButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivReportExpense"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/thirtyfive_dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/report_income_expense_buttons_shadow" />

                    <TextView
                        android:id="@+id/tvReportExpense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/five_dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:text="@string/expanse" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="@dimen/one_dp"
                    android:layout_height="match_parent"
                    android:background="#dddddd" />

                <RelativeLayout
                    android:id="@+id/incomeButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivReportIncome"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/thirtyfive_dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/report_income_expense_buttons_shadow" />

                    <TextView
                        android:id="@+id/tvReportIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/five_dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:text="@string/income" />
                </RelativeLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#e8e8e8"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvCategoryList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:background="#fff"
                android:paddingTop="@dimen/ten_dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>