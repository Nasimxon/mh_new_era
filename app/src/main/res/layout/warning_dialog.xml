<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shape"
    android:paddingBottom="@dimen/ten_dp"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ten_dp"
        >
        <TextView
            android:id="@+id/tvCatEditName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sixteen_dp"
            android:textColor="@color/black_for_myagkiy_glavniy"
            android:text="@string/attention" />


    </RelativeLayout>
    <FrameLayout
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#eaeaea"/>
    <TextView
        android:id="@+id/tvWarningText"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:layout_marginRight="@dimen/sixteen_dp"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:layout_marginBottom="@dimen/twenty_dp"
        android:text="TextView"
        android:textColor="@color/for_darker"
        android:textSize="@dimen/sixteen_dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/five_dp"
        android:gravity="bottom"
        >
        <TextView
            android:id="@+id/btnWarningNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/diaolog_button_enable_color"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/no"
            android:textSize="@dimen/sixteen_dp"
            android:padding="5dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_marginLeft="@dimen/sixteen_dp"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five_dp"
            >

            <com.jim.finansia.utils.TintImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignBottom="@+id/btnWarningYes"
                android:layout_alignLeft="@+id/btnWarningYes"
                android:layout_alignRight="@+id/btnWarningYes"
                android:layout_alignTop="@+id/btnWarningYes"
                android:scaleType="fitXY"
                android:src="@drawable/diaolog_buttons"
                android:tint="?attr/headAccedent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnWarningYes"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/sixteen_dp"
                android:text="@string/yes"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:padding="5dp"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
