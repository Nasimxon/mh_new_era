<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shape"
    android:paddingBottom="@dimen/ten_dp"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginRight="@dimen/ten_dp">
        <TextView
            android:id="@+id/tvCatEditName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sixteen_dp"
            android:textColor="@color/black_for_myagkiy_glavniy"
            android:text="Payment detials" />
        <ImageView
            android:id="@+id/ivInfoDebtBorrowCancel"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ten_dp"
            android:src="@drawable/cancel_sign"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <FrameLayout
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#eaeaea"/>
    <TextView
        android:id="@+id/tvWarningText"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"

        android:layout_marginRight="@dimen/sixteen_dp"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:layout_marginBottom="@dimen/twenty_dp"
        android:text="TextView"
        android:textColor="@color/for_darker"
        android:textSize="@dimen/sixteen_dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/twelve_dp">
        <TextView
            android:id="@+id/btnWarningNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/diaolog_button_enable_color"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/no"
            android:textSize="@dimen/sixteen_dp"
            android:padding="5dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/twelve_dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btnWarningYes"
            android:background="@drawable/diaolog_buttons"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/sixteen_dp"
            android:text="@string/yes"
            android:layout_marginRight="@dimen/twelve_dp"
            android:padding="5dp"/>
    </LinearLayout>

</LinearLayout>
