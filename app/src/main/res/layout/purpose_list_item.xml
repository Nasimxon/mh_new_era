<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/carditem"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginRight="@dimen/ten_dp"
        android:layout_marginTop="@dimen/five_dp"
        android:layout_marginBottom="@dimen/five_dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/six_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="@dimen/ten_dp"
                android:paddingLeft="@dimen/ten_dp"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:id="@+id/llPurposePayIn"
                >

                <ImageView
                    android:id="@+id/ivAccountItemSendPurpose"
                    android:layout_width="@dimen/twentyfive_dp"
                    android:layout_height="@dimen/twentyfive_dp"
                    android:tint="#979797"
                    android:src="@drawable/parasen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:gravity="center"
                    android:textSize="@dimen/ten_dp"
                    android:text="@string/to_purpose"
                    android:textColor="#aeaaaa" />

            </LinearLayout>
            <FrameLayout
                android:layout_width="2px"
                android:layout_height="@dimen/fifty_dp"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:background="#f1f1f1"/>
            <LinearLayout
                android:id="@+id/llPurposeCenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivPurposeItem"
                    android:layout_width="@dimen/seventy_dp"
                    android:layout_height="@dimen/seventy_dp"
                    android:src="@drawable/icons_17" />

            </LinearLayout>
            <FrameLayout
                android:layout_width="2px"
                android:layout_height="@dimen/fifty_dp"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:background="#f1f1f1"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/twentyfive_dp"
                android:gravity="center"
                android:id="@+id/llPurposeSpend"
                android:paddingRight="@dimen/ten_dp"
                android:paddingLeft="@dimen/ten_dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivAccountItemExchange"
                    android:layout_width="@dimen/twentyfive_dp"
                    android:tint="#979797"
                    android:layout_height="@dimen/twentyfive_dp"
                    android:src="@drawable/transfer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dp"
                    android:gravity="center"
                    android:textSize="@dimen/ten_dp"
                    android:text="@string/transfer_to_another_acc"
                    android:textColor="#aeaaaa" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvPurposeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:textColor="@color/black_for_myagkiy_glavniy"
            android:gravity="center"

            android:text="Account my purpose is great"
            android:textSize="@dimen/twenty_dp"
            android:paddingRight="@dimen/fourty_dp"
            android:paddingLeft="@dimen/fourty_dp"/>
        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="270$"
            android:layout_marginBottom="@dimen/twenty_dp"
            android:textColor="@color/seecondary_button"
            android:textSize="@dimen/sixteen_dp"
            />
        <com.jim.finansia.utils.PercentView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pvPercent"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_marginBottom="@dimen/sixteen_dp"/>
    </LinearLayout>
</LinearLayout>


