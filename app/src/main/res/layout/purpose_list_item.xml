<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/carditem"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginRight="@dimen/ten_dp"
        android:layout_marginTop="@dimen/five_dp"
        android:layout_marginBottom="@dimen/five_dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/llPurposePayIn"
                android:layout_toLeftOf="@+id/llPurposeCenter"
                android:layout_marginTop="@dimen/fifteen_dp">
                <ImageView
                    android:id="@+id/ivPurposePayIn"
                    android:layout_width="@dimen/thirty_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:layout_marginBottom="@dimen/fifteen_dp"
                    android:src="@drawable/cat_list_item_edit"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/replanish"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:id="@+id/llPurposeCenter"
                android:layout_marginLeft="@dimen/twenty_dp"
                android:layout_marginRight="@dimen/twenty_dp">
                <ImageView
                    android:id="@+id/ivPurposeItem"
                    android:layout_width="@dimen/seventy_dp"
                    android:layout_height="@dimen/seventy_dp"
                    android:layout_marginBottom="@dimen/ten_dp"/>
                <TextView
                    android:id="@+id/tvPurposeName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:text="TextView"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/toolbar_text_color"
                    android:textSize="@dimen/sixteen_sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/llPurposeSpend"
                android:layout_toRightOf="@+id/llPurposeCenter"
                android:layout_marginTop="@dimen/fifteen_dp" >
                <ImageView
                    android:id="@+id/ivPurposeSpend"
                    android:layout_width="@dimen/thirty_dp"
                    android:layout_height="@dimen/thirty_dp"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:src="@drawable/cat_list_item_edit"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spend"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="270$"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginBottom="@dimen/five_dp"
            android:textColor="@color/black_for_glavniy_text"
            android:textSize="@dimen/sixteen_dp" />
        <com.jim.pocketaccounter.utils.PercentView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pvPercent"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_marginBottom="@dimen/ten_dp"/>
    </LinearLayout>
</LinearLayout>


