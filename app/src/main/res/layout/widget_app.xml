<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/five_dp"
        android:background="@drawable/rounded_rect"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/five_dp">

        <LinearLayout
            android:id="@+id/to_program"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvTitleWidget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_dp"
                android:layout_weight="1"
                android:text="@string/balance"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/balance_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifteen_dp"
                android:text="100$"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="1px"
                android:layout_height="15dp"
                android:background="#33ffffff" />

            <FrameLayout
                android:layout_width="1px"
                android:layout_height="15dp"
                android:background="#33000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/five_dp"
            android:paddingRight="@dimen/five_dp">

            <ImageView
                android:id="@+id/settings_widget"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:src="@drawable/ic_settings"
                android:tint="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rect"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/button_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/button_1_icon"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/three_dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/icons_1"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/tvButtonName_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Card"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/five_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="1px"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="#33ffffff" />

            <FrameLayout
                android:layout_width="1px"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="#33000000" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/button_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/button_2_icon"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/three_dp"
                android:layout_weight="1"

                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/icons_2"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/tvButtonName_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Card"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/five_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="1px"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="#33ffffff" />

            <FrameLayout
                android:layout_width="1px"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="#33000000" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/button_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/button_3_icon"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/three_dp"
                android:layout_weight="1"

                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/icons_3"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/tvButtonName_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Card"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/five_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="1px"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="#33ffffff" />

            <FrameLayout
                android:layout_width="1px"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="#33000000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/button_4_icon"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/three_dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"

                android:scaleType="centerInside"
                android:src="@drawable/icons_4"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/tvButtonName_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Card"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
