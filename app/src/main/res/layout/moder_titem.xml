<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sevent_dp"
        android:layout_marginLeft="@dimen/eight_dp"
        android:layout_marginRight="@dimen/eight_dp"
        android:layout_marginTop="@dimen/two_dp"
        android:background="@drawable/carditem"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iconaaa"
                    android:layout_width="@dimen/eightyfive_dp"
                    android:layout_height="@dimen/eightyfive_dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_marginBottom="@dimen/eight_dp"
                    android:padding="@dimen/five_dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/twelve_sp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/NameCr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="@dimen/five_dp"
                            android:layout_toLeftOf="@+id/procent_of_credit"
                            android:textColor="@color/black_for_glavniy_text"
                            android:text="My TV"
                            android:textSize="@dimen/eighteen_sp" />
                        <TextView
                            android:id="@+id/procent_of_credit"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/five_dp"
                            android:gravity="left"
                            android:text="15%"
                            android:layout_marginLeft="@dimen/sixteen_dp"
                            android:textColor="@color/black_for_glavniy_text"
                            android:textSize="@dimen/eighteen_sp" />
                    </LinearLayout>



                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/for_this_period"
                            android:textColor="@color/secondaryCred"
                            android:textSize="@dimen/sixteen_dp" />


                        <TextView
                            android:id="@+id/tvForThisPeriod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/ten_dp"
                            android:text="800,00$"
                            android:textColor="@color/credit_yellow"
                            android:textSize="@dimen/sixteen_dp" />



                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#eaeaea"
                    />
               <LinearLayout
                   android:id="@+id/wlyuzOpenOpener"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/credit_white_grey"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:paddingLeft="@dimen/sixteen_dp"
                       android:textSize="@dimen/sixteen_dp"
                       android:text="@string/credit_details"
                       android:paddingTop="@dimen/sevent_dp"
                       android:paddingBottom="@dimen/sevent_dp"/>
                   <ImageView
                       android:id="@+id/openCloseIcon"
                       android:layout_width="@dimen/twelve_sp"
                       android:layout_height="match_parent"
                       android:layout_marginRight="@dimen/sixteen_dp"
                       android:scaleType="centerInside"
                       android:src="@drawable/info_open"/>
               </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#eaeaea"
                    />
                <LinearLayout
                    android:id="@+id/wlyuzOpen"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/infoOpen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/sixteen_dp"
                            android:paddingTop="@dimen/five_dp"
                            android:paddingBottom="@dimen/five_dp"
                            android:paddingRight="@dimen/sixteen_dp"
                            >

                            <TextView
                                android:id="@+id/textView24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/procent_of_credit"
                                android:textColor="#838383"
                                android:textSize="@dimen/sixteen_dp" />

                            <TextView
                                android:id="@+id/procentCredInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="15%"
                                android:textColor="#414141"
                                android:textSize="@dimen/sixteen_dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fbfbfb"
                            android:paddingLeft="@dimen/sixteen_dp"
                            android:paddingTop="@dimen/five_dp"
                            android:paddingBottom="@dimen/five_dp"
                            android:paddingRight="@dimen/sixteen_dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/total_credit_value"
                                android:textColor="#838383"
                                android:textSize="@dimen/sixteen_dp" />

                            <TextView
                                android:id="@+id/takedValueInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="5000$"
                                android:textColor="#414141"
                                android:textSize="@dimen/sixteen_dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/five_dp"
                            android:paddingBottom="@dimen/five_dp"
                            android:paddingLeft="@dimen/sixteen_dp"
                            android:paddingRight="@dimen/sixteen_dp">

                            <TextView
                                android:id="@+id/textView25"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/with_interest"
                                android:textColor="#838383"
                                android:textSize="@dimen/sixteen_dp" />

                            <TextView
                                android:id="@+id/totalReturnValueInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="6200$"
                                android:textColor="#414141"
                                android:textSize="@dimen/sixteen_dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fbfbfb"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/sixteen_dp"
                            android:paddingTop="@dimen/five_dp"
                            android:paddingBottom="@dimen/five_dp"
                            android:paddingRight="@dimen/sixteen_dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/total_payed"
                                android:textColor="#838383"
                                android:textSize="@dimen/sixteen_dp" />

                            <TextView
                                android:id="@+id/tvBalanceCredit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="3200$"
                                android:textColor="#414141"
                                android:textSize="@dimen/sixteen_dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/five_dp"
                            android:paddingBottom="@dimen/five_dp"
                            android:paddingLeft="@dimen/sixteen_dp"
                            android:paddingRight="@dimen/sixteen_dp">
                            <TextView
                                android:id="@+id/tvPeriodEndLeftTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/period_ends"
                                android:textColor="#838383"
                                android:textSize="@dimen/sixteen_dp" />

                            <TextView
                                android:id="@+id/tvPeriodEndLeft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="15 days"
                                android:textColor="#414141"
                                android:textSize="@dimen/sixteen_dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fbfbfb"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/sixteen_dp"
                            android:paddingTop="@dimen/five_dp"
                            android:paddingBottom="@dimen/five_dp"
                            android:paddingRight="@dimen/sixteen_dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/period_of_credit2"
                                android:textColor="#838383"
                                android:textSize="@dimen/sixteen_dp" />

                            <TextView
                                android:id="@+id/intervalCreditInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="2 years"
                                android:textColor="#414141"
                                android:textSize="@dimen/sixteen_dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/five_dp"
                            android:paddingBottom="@dimen/five_dp"
                            android:paddingLeft="@dimen/sixteen_dp"
                            android:paddingRight="@dimen/sixteen_dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/taked_date"
                                android:textColor="#838383"
                                android:textSize="@dimen/sixteen_dp" />

                            <TextView
                                android:id="@+id/date_start"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="15 Nov, 2016"
                                android:textColor="#414141"
                                android:textSize="@dimen/sixteen_dp" />
                        </LinearLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="#eaeaea"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:layout_marginBottom="@dimen/sixteen_dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/llSchedule"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginRight="@dimen/five_dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/twentyfive_dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/circulate"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:tint="#c8c8c8"/>
                    <TextView
                        android:id="@+id/periodEnds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/period_end_after"
                        android:textSize="@dimen/twelve_dp"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/credit_liniya"/>
                <LinearLayout
                    android:id="@+id/pay"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:src="@drawable/yellow_mony"
                        android:layout_marginRight="@dimen/ten_dp"
                        />
                    <TextView
                        android:id="@+id/tvPayAbout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/pay"
                        android:textSize="@dimen/twelve_dp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
