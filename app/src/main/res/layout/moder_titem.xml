<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sevent_dp"
        android:layout_marginLeft="@dimen/eight_dp"
        android:layout_marginRight="@dimen/eight_dp"
        android:layout_marginTop="@dimen/two_dp"
        android:background="@drawable/carditem"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iconaaa"
                    android:layout_width="@dimen/eightyfive_dp"
                    android:layout_height="@dimen/eightyfive_dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_marginBottom="@dimen/eight_dp"
                    android:padding="@dimen/five_dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/twelve_sp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/NameCr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="@dimen/five_dp"
                            android:layout_toLeftOf="@+id/procent_of_credit"
                            android:textColor="@color/black_for_glavniy_text"
                            android:text="My TV"
                            android:textSize="@dimen/eighteen_sp" />
                        <TextView
                            android:id="@+id/procent_of_credit"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/five_dp"
                            android:gravity="left"
                            android:text="15%"
                            android:layout_marginLeft="@dimen/sixteen_dp"
                            android:textColor="@color/black_for_glavniy_text"
                            android:textSize="@dimen/eighteen_sp" />
                    </LinearLayout>
                    <!--DELETE-->
                        <TextView
                            android:id="@+id/total_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textView5"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:gravity="bottom"
                            android:visibility="gone"
                            android:textColor="@color/green_light"
                            android:textSize="@dimen/twelve_sp" />


                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="For this period:"
                            android:textColor="@color/secondaryCred"
                            android:textSize="@dimen/sixteen_dp" />


                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/ten_dp"
                            android:text="800,00$"
                            android:textColor="@color/credit_yellow"
                            android:textSize="@dimen/sixteen_dp" />

                    <!--DELETE-->
                        <TextView
                            android:id="@+id/totalpayd"
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:gravity="bottom"
                            android:textColor="@color/green_light"
                            android:textSize="@dimen/twelve_sp" />

                </LinearLayout>
            </LinearLayout>
            <!--DELETE-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/eight_dp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/four_dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_centerVertical="true"
                    android:background="@color/green_light_forline" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/four_dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_light2" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/progres_frame"
                    android:padding="2px"
                    android:weightSum="100">
                    <FrameLayout
                        android:id="@+id/zapolnit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="35"
                        android:background="@drawable/progres" />
                </LinearLayout>
            </RelativeLayout>
            <!--DELETE-->
            <RelativeLayout
                android:visibility="gone"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/ten_dp"
                android:paddingLeft="@dimen/sixteen_dp"
                android:paddingRight="@dimen/sixteen_dp"
                android:paddingTop="@dimen/six_dp">
                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/rela2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/realrt1"
                        android:layout_marginTop="@dimen/two_dp">
                        <TextView
                            android:id="@+id/dateay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="@string/taken_date"
                            android:textColor="@color/for_darker"
                            android:textSize="@dimen/twelve_sp" />
                        <TextView
                            android:id="@+id/date_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:gravity="bottom"
                            android:textColor="@color/black_for_glavniy_text"
                            android:textSize="@dimen/twelve_sp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/realrt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/three_dp">
                        <TextView
                            android:id="@+id/left_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textView2"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:gravity="bottom"
                            android:textColor="@color/black_for_glavniy_text"
                            android:textSize="@dimen/twelve_sp" />
                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/left_date"
                            android:layout_toStartOf="@+id/left_date"
                            android:text="@string/left2"
                            android:textColor="@color/for_darker"
                            android:textSize="@dimen/twelve_sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rela2"
                        android:layout_marginTop="@dimen/three_dp">
                        <TextView
                            android:id="@+id/overallpay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textView3"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:gravity="bottom"
                            android:textColor="@color/red"
                            android:textSize="@dimen/twelve_sp" />
                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/overallpay"
                            android:layout_toStartOf="@+id/overallpay"
                            android:text="@string/verall_debt"
                            android:textColor="@color/for_darker"
                            android:textSize="@dimen/twelve_sp" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/five_dp"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#eaeaea"
                    />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/credit_white_grey"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:paddingLeft="@dimen/sixteen_dp"
                       android:text="Credit Detials"
                       android:paddingTop="@dimen/sevent_dp"
                       android:paddingBottom="@dimen/sevent_dp"/>
                   <ImageView
                       android:layout_width="@dimen/twelve_sp"
                       android:layout_height="match_parent"
                       android:layout_marginRight="@dimen/sixteen_dp"
                       android:scaleType="centerInside"
                       android:src="@drawable/info_open"/>
               </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#eaeaea"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:layout_marginBottom="@dimen/sixteen_dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginRight="@dimen/five_dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/twentyfive_dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/circulate"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:tint="#c8c8c8"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Period end after: \n15days"
                        android:textSize="@dimen/twelve_dp"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/credit_liniya"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:src="@drawable/yellow_mony"
                        android:layout_marginRight="@dimen/ten_dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Payment for \nloan"
                        android:textSize="@dimen/twelve_dp"/>

                </LinearLayout>
            </LinearLayout>
            <!--DELETE-->
            <RelativeLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/relativeLayout"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/sixteen_dp"
                android:paddingRight="@dimen/sixteen_dp">
                <TextView
                    android:id="@+id/pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/sixteen_dp"
                    android:background="@drawable/knopka_zeleniy"
                    android:gravity="center"
                    android:text="@string/pay_upper"
                    android:textColor="@color/green_light"
                    android:textSize="@dimen/twelve_sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
