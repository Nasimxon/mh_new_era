<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlColorChangeFragment"
        android:layout_weight="1"
        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="#fcfcfc">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvColorChangeFragment"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/llBuyColorButton"
            android:layout_margin="@dimen/ten_dp"
            android:background="@drawable/color_choose_bottom_button_border_no_bg">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/set_color"
                android:textSize="@dimen/sixteen_dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/tvColorChooseSetText"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginBottom="@dimen/ten_dp"/>
            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#fff"
                android:id="@+id/ivColorChooseButtonThinStripe"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sixteen_dp"
                android:id="@+id/tvColorChooseButtonPaymentAmount"
                android:textColor="#fff"
                android:text="0.49$"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_marginBottom="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/twenty_dp"
                android:layout_marginRight="@dimen/twenty_dp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>