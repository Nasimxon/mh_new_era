<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <lecho.lib.hellocharts.view.LineChartView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lchvReportByIncomeExpenseMonthDetailedByDays"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:layout_marginBottom="@dimen/sixteen_dp"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_marginRight="@dimen/sixteen_dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvReportByIncomeExpenseDate"
        android:textSize="@dimen/fourteen_dp"
        android:layout_marginRight="@dimen/sixteen_dp"
        android:textColor="#bebebe"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/ten_dp"
                android:id="@+id/ivDailyIncomeRect"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/income"
                android:textSize="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/four_dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/four_dp">
            <ImageView
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/ten_dp"
                android:id="@+id/ivDailyExpenseRect"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expanse"
                android:textSize="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/four_dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/four_dp">
            <ImageView
                android:layout_width="@dimen/thirty_dp"
                android:layout_height="@dimen/ten_dp"
                android:id="@+id/ivDailyProfitRect"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profit"
                android:textSize="@dimen/ten_dp"
                android:layout_marginLeft="@dimen/four_dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>