<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/ten_dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_light2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/ten_dp">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/ivPurposeinfoIcon"
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/twelve_dp"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:layout_marginTop="@dimen/twelve_dp"
                android:clickable="false" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvPurposeInfoName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:text="My Purpose"
                    android:textColor="@color/black_for_glavniy_text"
                    android:textSize="@dimen/twenty_dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:text="@string/left_acomuleted"
                    android:textColor="@color/black_for_secondary_text"
                    android:textSize="@dimen/twelve_dp" />
                <TextView
                    android:id="@+id/tvPurposeInfoAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ten_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:text="TextView"
                    android:textColor="@color/black_for_glavniy_text"
                    android:textSize="@dimen/sixteen_dp" />
            </LinearLayout>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvCategoryInfoSubcategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:layout_marginLeft="@dimen/sixteen_dp"
                    android:layout_marginRight="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:textSize="@dimen/ten_dp"
                    android:visibility="gone" />
            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_weight="1"
                android:text="@string/left_date"
                android:textSize="@dimen/sixteen_dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 month"
                android:textColor="@color/black_for_glavniy_text" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvPurposeInfoToCash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:layout_weight="1"
                android:background="@drawable/knopka_zeleniy"
                android:gravity="center"
                android:text="@string/spend"
                android:textColor="@color/green_light" />
            <TextView
                android:id="@+id/tvPurposeInfoReplanish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:layout_weight="1"
                android:background="@drawable/knopka_zeleniy"
                android:gravity="center"
                android:text="@string/replanish"
                android:textColor="@color/green_light" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginBottom="@dimen/ten_dp"
        android:background="@color/green_light_forline" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/five_dp"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_marginRight="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/five_dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_weight="1"
            android:text="@string/operations"
            android:textSize="@dimen/sixteen_dp" />
        <ImageView
            android:id="@+id/ivPurposeInfoDelete"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:src="@drawable/ic_delete_proz" />
        <ImageView
            android:id="@+id/ivPurposeInfoFilter"
            android:layout_width="@dimen/twenty_dp"
            android:layout_height="@dimen/twenty_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:src="@drawable/ic_filter" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_marginRight="@dimen/sixteen_dp"
        android:background="@color/toolbar_color">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:gravity="center"
            android:text="@string/date" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/name" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:gravity="center"
            android:text="@string/amount" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPurposeInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/ten_dp"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_with_toolbarcolor" />
        <RelativeLayout
            android:id="@+id/forGoneLeftDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/leftdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:text="2 month"
                android:textColor="@color/black_for_glavniy_text"
                android:textSize="@dimen/ten_dp" />
            <TextView
                android:id="@+id/tvLeftDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_toLeftOf="@+id/leftdate"
                android:layout_toStartOf="@+id/leftdate"
                android:text="@string/left_datee"
                android:textSize="@dimen/ten_dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/totaly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:text="1500$"
                android:textColor="@color/green_light"
                android:textSize="@dimen/ten_dp" />
            <TextView
                android:id="@+id/tvCategoryInfoTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_toLeftOf="@+id/totaly"
                android:layout_toStartOf="@+id/totaly"
                android:text="@string/total"
                android:textSize="@dimen/ten_dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
